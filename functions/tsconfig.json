{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es2017",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "paths": {
      "@models/*": ["../models/*"]
    },
    "typeRoots": ["./node_modules/@types"], 
    "types": [] 
  },
  "include": ["src/**/*.ts", "../models/*.ts"],
  "exclude": ["../node_modules", "**/*.test.ts"],
  "compileOnSave": true
}
